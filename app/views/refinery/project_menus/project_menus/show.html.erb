<% content_for :body_content_title do %>
  <%= @project_menu.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @project_menu.name %>
    </p>
  </section>
  <section>
    <h1>Id</h1>
    <p>
      <%=raw @project_menu.id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="project_menus">
      <% @project_menus.each do |project_menu| %>
        <li>
          <%= link_to project_menu.name, refinery.project_menus_project_menu_path(project_menu) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
